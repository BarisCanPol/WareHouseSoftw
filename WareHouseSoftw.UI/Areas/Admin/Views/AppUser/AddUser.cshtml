
@{
    ViewBag.Title = "AddUser";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}
@model WareHouseSoftw.UI.Areas.Admin.Models.DTO.UserDTO
<section class="content-header">   
    <ol class="breadcrumb">
        <li><a href="/Admin/HomeAdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/UserList">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>

<div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <div class="box-header with-border">
              <h3 class="box-title">Add User</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form action="/Admin/AppUser/AddUser" method="post" role="form">
                <div class="box-body">

                    <div class="form-group">
                        <label for="First Name">First Name</label>
                        <input type="text" name="FirstName" class="form-control" i" placeholder="Enter First Name">
                        @Html.ValidationMessageFor(x=> x.FirstName)
                    </div>
                    <div class="form-group">
                        <label for="Last Name">Last Name</label>
                        <input type="text" name="LastName" class="form-control" placeholder="Enter Last Name">
                        @Html.ValidationMessageFor(x => x.LastName)
                    </div>
                    <div class="form-group">
                        <label for="UserName">UserName</label>
                        <input type="text" name="UserName" class="form-control" placeholder="Enter UserName">
                        @Html.ValidationMessageFor(x => x.UserName)
                    </div>
                    <div class="form-group">
                        <label for="Email address">Email address</label>
                        <input type="email" name="Email" class="form-control" placeholder="Enter Email">
                        @Html.ValidationMessageFor(x => x.Email)
                    </div>
                    <div class="form-group">
                        <label for="Password">Password</label>
                        <input type="password" name="Password" class="form-control" placeholder="Password">
                        @Html.ValidationMessageFor(x => x.Password)
                    </div>
                    <div class="form-group">

                        <label for="Role">Role</label>
                        <select name="Role" class="form-control">
                            @foreach (var item in Enum.GetNames(typeof(WareHouseSoftw.Model.Enum.Role)))
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                        @Html.ValidationMessageFor(x => x.Role)

                    </div>
                    <div>
                        <label for="Gender">Gender</label>
                        <select name="Gender" class="form-control">
                            @foreach (var item in Enum.GetNames(typeof(WareHouseSoftw.Model.Enum.Gender)))
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                </div>
              <!-- /.box-body -->

              <div class="box-footer">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </div>
         
        </div>

