
@{
    ViewBag.Title = "UpdateUser";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model WareHouseSoftw.UI.Areas.Admin.Models.DTO.UserDTO
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/AppUser/AddUser">Add User</a></li>
        <li><a href="/Admin/AppUser/UserList">User List</a></li>
        <li class="active">Update User</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Category</h3>
                </div>
                <form action="/Admin/AppUser/UpdateUser" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">First Name</label>
                            <input type="text" name="FirstName" value="@Model.FirstName" class="form-control" placeholder="First Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Last Name</label>
                            <input type="text" name="LastName" value="@Model.LastName" class="form-control" placeholder="Last Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Email</label>
                            <input type="text" name="Email" value="@Model.Email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group">
                            <label for="text">Username</label>
                            <input type="text" name="UserName" value="@Model.UserName" class="form-control" placeholder="UserName">
                        </div>
                        <div class="form-group">
                            <label for="text">Password</label>
                            <input type="text" name="Password" value="@Model.Password" class="form-control" placeholder="Password">
                        </div>
                        <div class="form-group">

                            <label for="Role">Role</label>
                            <select name="Role" class="form-control" value="@Model.Role">
                                @foreach (var item in Enum.GetNames(typeof(WareHouseSoftw.Model.Enum.Role)))
                                {
                                    <option value="@item">@item</option>
                                }
                            </select>

                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

