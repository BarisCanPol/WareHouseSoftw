
@{
    ViewBag.Title = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayoutPage.cshtml";
}

@model WareHouseSoftw.UI.Areas.Admin.Models.VM.PoductVM
<section class="content-header">
    <ol class="breadcrumb">
        <li><a href="/Admin/Home/AdminHomeIndex"><i class="fa fa-home"></i> Home</a></li>
        <li><a href="/Admin/Product/AddProduct">Add Product</a></li>
        <li><a href="/Admin/Product/ProdcutList">Product List</a></li>
        <li class="active">Product Update</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Update Product</h3>
                </div>
                <form action="/Admin/Product/UpdateProduct" method="post" enctype="multipart/form-data" role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="text">Product Name</label>
                            <input type="text" name="CategoryName" value="@Model.Product.ProductName" class="form-control" placeholder="Product Name">
                        </div>
                        <div class="form-group">
                            <label for="text">Prospectus</label>
                            <input type="text" name="Prospectus" value="@Model.Product.Prospectus" class="form-control" placeholder="Prospectus">
                        </div>
                        <div class="form-group">
                            <label for="text">Unit Price</label>
                            <input type="text" name="UnitPirce" value="@Model.Product.UnitPirce" class="form-control" placeholder="Prospectus">
                        </div>
                        <div class="form-group">
                            <label for="text">Units In Stock</label>
                            <input type="text" name="UnitsInStock" value="@Model.Product.UnitsInStock" class="form-control" placeholder="UnitsInStock">
                        </div>
                        <div class="form-group">
                            <label for="text">Quantity</label>
                            <input type="text" name="Quantity" value="@Model.Product.Quantity" class="form-control" placeholder="Quantity">
                        </div>
                        <div class="form-group">
                            <label for="text">Price</label>
                            <input type="text" name="Quantity" value="@Model.Product.Price" class="form-control" placeholder="Quantity">
                        </div>
                        <div class="form-group">
                            <label for="CategoryName">Choose Category</label>
                            <select name="CategoryID" class="form-control" >
                                @foreach (var item in Model.Categories)
                                {
                                    <option value="@item.ID">@item.CategoryName</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="text" style="visibility:hidden" name="ID" value="@Model.Product.ID" />
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>



